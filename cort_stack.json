{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A stacked bar chart of categories over years.",
  "title": "Distribution patients of corticosteroids Percentages by Category in Different Hospitals",
  "data": {
    "url": "https://raw.githubusercontent.com/simingwu001215/simingwu001215.github.io/main/Care_Project/cort_pt_dr.csv"
  },
  "width": 400,
  "height": 200,
  "mark": "bar",
  "encoding": {
    "x": {"field": "Hospital", "type": "ordinal", "axis": {"labelAngle": 0}},
    "y": {
      "field": "percentage",
      "type": "quantitative",
      "axis": {"title": "Percentage Corticosteroids(%)"},
      "stack": "zero"
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "legend": {"title": "Category"}
    },
    "tooltip": [
      {"field": "category", "type": "ordinal", "title": "Category"},
      {"field": "Hospital", "type": "nominal", "title": "Hospital"},
      {"field": "percentage", "type": "quantitative", "title": "Percentage(%)"},
      {
        "field": "target",
        "type": "quantitative",
        "title": "Number of patients receives corticosteroids"
      }
    ]
  },
  "config": {}
}
